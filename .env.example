# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true

# Bot Settings
BOT__TOKEN=your_bot_token_here
BOT__ADMIN_IDS=[123456789]
BOT__DROP_PENDING_UPDATES=true

# === Database Connection ===
# Option 1: DATABASE_URL (for external DB â€” Supabase, Neon, etc.)
# DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
# SSL_MODE=require

# Option 2: Individual fields (for docker-compose local development)
POSTGRES__DB_HOST=postgres
POSTGRES__DB_PORT=5432
POSTGRES__DB_USER=bot
POSTGRES__DB_PASSWORD=bot
POSTGRES__DB_NAME=bot

# Connection pool
POSTGRES__POOL_SIZE=10
POSTGRES__MAX_OVERFLOW=20
POSTGRES__ECHO=false

# Logging Settings
LOGGING__LEVEL=INFO
